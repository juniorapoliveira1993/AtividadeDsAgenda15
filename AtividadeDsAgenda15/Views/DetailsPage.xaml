<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AtividadeDsAgenda15.Views.DetailsPage"
    NavigationPage.HasNavigationBar="False"
    Background="{StaticResource BlushGradient}"
>

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*, Auto"
    >

        <VerticalStackLayout>
            <Label
                Text="{Binding Name}"
                FontSize="Header"
                Padding="30"
                VerticalOptions="Center"
                HorizontalOptions="Center"
            />

            <Grid
                ColumnDefinitions="*, *, *"
                RowDefinitions="auto, auto"
                Padding="20"
            >

                <Label
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Inicio"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

                <Label
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="{Binding StartDate}"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

                <Label
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="Término"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

                <Label
                    Grid.Column="1"
                    Grid.Row="1"
                    Text="{Binding EndDate}"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

                <Label
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="Duração"
                    FontSize="Medium"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

                <Label
                    Grid.Column="2"
                    Grid.Row="1"
                    Text="{Binding Duration}"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center"
                />

            </Grid>
            <VerticalStackLayout
                Padding="20, 20, 10, 20"
                Spacing="15"
            >

                <HorizontalStackLayout
                    Spacing="5"
                >
                    <Label
                        Text="Numero de participantes:"
                        FontSize="Small"
                    />

                    <Label
                        Text="{Binding NumberParticipants}"
                        FontSize="Small"
                    />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label
                        Text="Custo por participante:"
                        Margin="0, 0, 5, 0"
                        FontSize="Small"
                    />

                    <Label
                        Text="{Binding CostParticipant, StringFormat='{}{0:C}'}"
                        FontSize="Small"
                    />
                </HorizontalStackLayout>

                <HorizontalStackLayout
                    Spacing="10"
                >

                    <Label
                        Text="Local:"
                        FontSize="Small"
                    />

                    <Label
                        Text="{Binding EventLocation}"
                        FontSize="Small"
                    />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <HorizontalStackLayout
                HorizontalOptions="Center"
                Margin="0, 20, 0, 0"
                Spacing="20"
            >

                <Label
                    Text="Custo Total:"
                    FontSize="Medium"
                />

                <Label
                    Text="{Binding Totalprice}"
                    FontSize="Medium"
                />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Button
            Grid.Row="1"
            Grid.Column="0"
            Text="Voltar"
            FontSize="Medium"
            Clicked="Button_Clicked"
        />
    </Grid>
</ContentPage>